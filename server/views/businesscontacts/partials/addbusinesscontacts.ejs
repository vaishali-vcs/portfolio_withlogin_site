<!--Content for Add Contact-->
<section>
    <div class="container">
        <div class="row">
            <div class="offset-md-2 col-md-8">
                <h4>
                    Add/Edit Contact
                </h4>

                <div class="container">
                    <form id="addcontact" action="/businesscontacts/upsertcontact" method="POST">
                        <div class="form-group">

                            <input type="name" class="form-control" name="contactname" id="contactname" aria-describedby="emailHelp"
                                value="<%= contacttoedit.name %>" placeholder="Name" required>
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="contactphone" id="contactphone" placeholder="Phone"
                                value="<%= contacttoedit.contact %>" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="contactemail" id="contactemail" placeholder="Email"
                                value="<%= contacttoedit.email %>" required>
                        </div>
                        <button type="submit" class="btn btn-primary" onclick="Clearform">Submit</button>
                        <a class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>