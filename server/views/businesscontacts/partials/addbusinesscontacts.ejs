<!--Content for Add Contact-->
<section>
    <div class="container">
        <div class="row">
            <div class="offset-md-2 col-md-8">
                <h3>
                  <span>Add/Edit Contact</span>  
                </h3>

                <div class="container">
                    <form id="addcontact" method="POST">
                        <div class="form-group">

                            <input type="name" class="form-control" name="contactname" id="contactname"
                                aria-describedby="emailHelp" value="<%= contacttoedit.name %>" placeholder="Name"
                                required>
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="contactphone" id="contactphone"
                                placeholder="Phone" value="<%= contacttoedit.contact %>" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="contactemail" id="contactemail"
                                placeholder="Email" value="<%= contacttoedit.email %>" required>
                        </div>
                        <button type="submit" formaction="/businesscontacts/upsertcontact" name="submit"
                            class="btn btn-primary">Submit</button>
                        <button type="submit" formmethod="GET" formaction="/businesscontacts/deletecontact/<%= contacttoedit._id %>"
                            onclick="return showwarning()" class="btn btn-danger">Delete</button>
                        <a class="btn btn-warning" onclick="Clearform()">
                            <i class="fas fa-undo"></i> Clear
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>